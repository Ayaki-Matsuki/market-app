#account-page.account-page
  = link_to "F-gram", root_path, class: "h1"
  .account-page__inner.clearfix
    .account-page__inner--header.account-page__header
      %h2 新規会員登録
      %h5
        = link_to "ログインの方", new_session_path(resource_name),style: "color:black"
    .account-page__inner--bottom.user-form
      %b ＊全て必須項目です
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :name, "氏名"
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :address, "住所"
          .field-input
            = f.text_field :address, placeholder: "例: 東京都 新宿区 高田馬場2-2-105" 
        .field
          .field-label
            = f.label :phonenumber, "電話番号"
          .field-input
            = f.text_field :phonenumber, placeholder: "例: 090-1234-5678"
        .field
          .field-label
            = f.label :email, "メールアドレス"
          .field-input
            = f.email_field :email, placeholder: "info@sample.com"
        .field
          .field-label
            = f.label :password, "パスワード"
            %i <英数字8文字以上>
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :password_confirmation, "パスワードの再確認"
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "登録する", class: 'btn'
