#account-page.account-page
  %h1 Market-App
  .account-page__inner.clearfix
    .account-page__inner--header.account-page__header
      %h2 ログイン
      %h5
        = link_to "新規会員登録の方", new_registration_path(resource_name),style: "color:blue"
    .account-page__inner--bottom.user-form
      %b ＊メールアドレスとパスワードを入力してください
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          .field-label
            = f.label :email,"メールアドレス"
          .field-input
            = f.email_field :email, autofocus: true
        .field
          .field-label
            = f.label :password,"パスワード"
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          = link_to "パスワードを忘れた方", new_password_path(resource_name),style: "color:blue"
          .actions
            = f.submit "ログイン", class: 'btn'
